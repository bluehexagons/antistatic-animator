{
  "name": "antistatic-animator",
  "version": "0.1.0",
  "description": "",
  "main": "dist/electron.js",
  "type": "commonjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "esbuild ./src/electron.ts --bundle --platform=node --format=cjs --target=node20 --outfile=dist/electron.js --external:electron --external:electron-devtools-installer",
    "build:preload": "esbuild ./src/preload.ts --bundle --platform=node --format=cjs --target=node20 --outfile=dist/preload.js --external:electron",
    "build:renderer": "vite build",
    "start": "electron .",
    "watch": "npm run build:main && npm run build:preload && npm run build:renderer -- --watch",
    "dist": "npx @electron/packager ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluehexagons/antistatic-animator.git"
  },
  "author": "bluehexagons",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bluehexagons/antistatic-animator/issues"
  },
  "homepage": "https://github.com/bluehexagons/antistatic-animator#readme",
  "devDependencies": {
    "@electron/packager": "^19.0.4",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "esbuild": "^0.27.3",
    "electron": "^40.4.0",
    "electron-devtools-installer": "^4.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "typescript-plugin-css-modules": "^5.2.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}
